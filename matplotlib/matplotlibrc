# A.J.D. Matplotlib style file           

# Set color cycle: selected from the PANTONEÂ® Color of the Year winners 
axes.prop_cycle    : cycler('color', ['0F4C81','E2583E','009473','BF1932','5F4B8B','A47864','F7CAC9','939597','88B04B','9BB7D4'])


# Set default figure size
figure.figsize : 3.41, 2.575

# Set grid
axes.grid        :   False
grid.linewidth   :   0.5      # in points
grid.alpha	 :   0.5
grid.color	 :   gainsboro
axes.axisbelow   :   line
axes.formatter.use_mathtext: True
axes.labelpad : -1.0
grid.linestyle : -

# Set x axis
xtick.direction : in
xtick.major.size : 3
xtick.major.width : 0.75
xtick.minor.size : 1.5
xtick.minor.width : 0.75
xtick.minor.visible : True
xtick.top : True
xtick.major.pad : 2
xtick.minor.pad : 2
axes.xmargin    : 0.025

# Set y axis
ytick.direction : in
ytick.major.size : 3
ytick.major.width : 0.75
ytick.minor.size : 1.5
ytick.minor.width : 0.75
ytick.minor.visible : True
ytick.right : True
ytick.major.pad : 2
ytick.minor.pad : 2
axes.ymargin    : 0.025

# Set line widths
axes.linewidth  : 0.5
lines.linewidth : 1.0
lines.dash_capstyle:   round        # {butt, round, projecting}
lines.solid_capstyle:  round
lines.dashed_pattern: 5, 5
lines.dashdot_pattern: 6.4, 2.6, 1, 2.6
lines.dotted_pattern: 1, 2.6


# Legend
legend.fontsize:      8
legend.borderpad:     0.2  # border whitespace
legend.labelspacing:  0.25  # the vertical space between the legend entries
legend.handlelength:  1.2  # the length of the legend lines
legend.handletextpad: 0.4  # the space between the legend line and legend text
legend.borderaxespad: 0.3  # the border between the axes and legend edge
legend.columnspacing: 1.3  # column separation

# Image
image.cmap	: magma
figure.dpi	: 400
path.snap	: false
# Always save as 'tight'
savefig.bbox : tight
savefig.pad_inches : 0.01

# Fonts
font.family : STIXGeneral
mathtext.fontset : stix
font.size : 10

# Use LaTeX for math formatting
text.usetex : True
text.latex.preamble : \usepackage{amsmath} \usepackage{amssymb}

